general {
        colors = true
        interval = 1
}

order += "volume master"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "battery 0"
order += "time"

battery 0 {
        format = "%status %percentage %remaining"
        path = "/sys/class/power_supply/BAT0/uevent"
}

time {
        format = " %Y-%m-%d %H:%M "
}

volume master {
        format = " Vol: %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 0 {
        format = " Temp: %degreesÂ°C " 
}

cpu_usage {
        format = " CPU: %usage "
}
